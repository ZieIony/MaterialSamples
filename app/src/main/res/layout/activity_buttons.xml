<pl.zielony.material.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <pl.zielony.material.widget.Button
        android:text="Theme style"
        android:layout_margin="@dimen/material_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <pl.zielony.material.widget.Button
        style="@style/material_Button"
        android:background="#ffffffff"
        app:material_cornerSize="2dp"
        app:material_rippleColor="#ffff0000"
        app:material_elevation="@dimen/material_elevationLow"
        app:material_touchMarginTop="6dp"
        app:material_touchMarginBottom="6dp"
        app:material_touchMarginLeft="100dp"
        app:material_touchMarginRight="100dp"
        android:text="Inline Style"
        android:paddingLeft="@dimen/material_padding"
        android:paddingRight="@dimen/material_padding"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:layout_gravity="right"
        android:layout_margin="@dimen/material_padding"
        android:layout_width="wrap_content"
        android:layout_height="36dp" />

    <pl.zielony.material.widget.Button
        android:id="@+id/bunny"
        android:background="@drawable/bunny"
        app:material_rippleColor="@null"
        app:material_elevation="@dimen/material_elevationLow"
        android:text=""
        android:padding="0dp"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <pl.zielony.material.widget.FloatingActionButton
        app:material_src="@raw/ic_shopping_cart_24px"
        android:layout_margin="@dimen/material_padding"
        android:layout_width="@dimen/material_fabSize"
        android:layout_height="@dimen/material_fabSize" />
</pl.zielony.material.widget.LinearLayout>
