<?xml version="1.0" encoding="utf-8"?>
<pl.zielony.material.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#ffffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <pl.zielony.material.widget.Button
        android:id="@+id/button"
        android:text="fade"
        android:layout_margin="@dimen/material_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <pl.zielony.material.widget.ImageView
        android:id="@+id/cow"
        android:src="@drawable/mazda"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</pl.zielony.material.widget.LinearLayout>