<pl.zielony.material.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <pl.zielony.material.widget.FrameLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <pl.zielony.material.widget.Button
            android:text="Button1"
            app:material_elevation="2dp"
            android:background="#ffafafff"
            android:layout_gravity="left"
            android:layout_margin="@dimen/material_padding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <pl.zielony.material.widget.Button
            android:text="Button2"
            app:material_elevation="4dp"
            android:background="#ffffafaf"
            android:layout_gravity="left"
            android:layout_marginTop="@dimen/material_padding"
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </pl.zielony.material.widget.FrameLayout>

    <pl.zielony.material.widget.Button
        android:id="@+id/button"
        android:text="Change Order"
        android:layout_margin="@dimen/material_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</pl.zielony.material.widget.LinearLayout>
