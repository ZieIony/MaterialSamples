<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <pl.zielony.material.shadow.ShadowLayout
        android:padding="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <pl.zielony.material.widget.Button
            android:text="Button 2"
            android:layout_width="100dp"
            android:layout_height="40dp" />
    </pl.zielony.material.shadow.ShadowLayout>

    <pl.zielony.material.shadow.ShadowLayout
        android:padding="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <pl.zielony.material.widget.Button
            style="@style/material_Button"
            android:background="#ffffffff"
            app:material_rippleColor="#ffff0000"
            app:material_elevation="@dimen/material_elevationLow"
            android:text="BUTTON"
            android:padding="0dp"
            android:layout_width="100dp"
            android:layout_height="40dp" />
    </pl.zielony.material.shadow.ShadowLayout>

    <pl.zielony.material.shadow.ShadowLayout
        android:padding="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <pl.zielony.material.widget.Button
            android:id="@+id/bunny"
            android:background="@drawable/bunny"
            app:material_rippleColor="@null"
            app:material_elevation="@dimen/material_elevationLow"
            android:text=""
            android:padding="0dp"
            android:layout_width="100dp"
            android:layout_height="100dp" />
    </pl.zielony.material.shadow.ShadowLayout>

    <pl.zielony.material.shadow.ShadowLayout
        android:padding="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <pl.zielony.material.widget.FloatingActionButton
            app:material_src="@raw/ic_shopping_cart_24px"
            android:layout_width="@dimen/material_fabSize"
            android:layout_height="@dimen/material_fabSize" />
    </pl.zielony.material.shadow.ShadowLayout>
</LinearLayout>
